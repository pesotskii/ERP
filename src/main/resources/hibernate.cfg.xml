<!--?xml version="1.0" encoding="UTF-8"?-->  
  
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/erpProject</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
		<property name="show_sql">true</property>
		<property name="connection.pool_size">5</property>
		<property name="hibernate.id.new_generator_mappings">false</property>
		<property name="hibernate.hbm2ddl.auto">update</property><!-- creates schema from entities each app deploy  -->

		<!-- here all entities will come -->
		<mapping class="erp.entity.User"/>
		<mapping class="erp.entity.Project"/>
		<mapping class="erp.entity.Project_participants"/>
		<mapping class="erp.entity.Department"/>
		<mapping class="erp.entity.Role"/>
		<mapping class="erp.entity.Resources"/>

	</session-factory>
</hibernate-configuration>